'''while True:
    print("mi primer while")
    
#cuenta las vueltas de los ciclos
counter = 0
while counter < 10:
    counter += 1
    print(counter)
counter = 0

# ahi hace que el break rompe el ciclo que esta trabajando es forzoso 
while counter < 20:
    counter += 1   
    if counter == 15:
        break
    print(counter)
''' 

# en continue siempre salta despues de la condicion 
counter = 0
while counter < 20:
    counter += 1   
    if counter < 15:
        continue
    print(counter)
